<h1>
  List of all directors
</h1>

<hr>

<form action="/insert_director" method="post">
  <label for="name_field">Name</label> <input id="name_field" type="text" name="name_field"> <br>
  <label for="dob_field">Dob</label> <input id="dob_field" type="date" name="dob_field"> <br>
  <label for="bio_field">Bio</label> <input id="bio_field" type="text" name="bio_field"> <br>
  <label for="image">Image</label> <input id="image" type="text" name="image_field"> <br>
  <button>Create director</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
